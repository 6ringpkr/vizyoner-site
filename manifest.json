  "shortcuts": [
    {
      "name": "Live Notifications",
      "short_name": "Live",
      "description": "View real-time notifications",
      "url": "/?page=live",
      "icons": [
        {
          "src": "/icons/shortcut-live.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Notification History", 
      "short_name": "History",
      "description": "Browse notification history",
      "url": "/?page=history",
      "icons": [
        {
          "src": "/icons/shortcut-history.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "MQTT Configuration",
      "short_name": "Config",
      "description": "Configure MQTT broker settings",
      "url": "/?page=config",
      "icons": [
        {
          "src": "/icons/shortcut-config.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "mqtt",
      "url": "/config?broker=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"]
      }
    }
  ]
}